%h3= "Test: #{@survey.name}"

%table.grid.hidden
  %thead
    %tr
      %th Woord
      %th Vertaling
  %tbody
    - @survey.packets.each do |packet|
      - packet.words.each do |word|
        %tr
          %td= word.original
          %td= word.translation

%div
  = switch_visibility_link("Toon alle woorden", '#show-words-link', '.grid, #hide-words-link', '', 'show-words-link')
  = switch_visibility_link("Verberg alle woorden", '#hide-words-link, .grid', '#show-words-link', 'hidden', 'hide-words-link')

%h3 Resultaten

-if @survey.survey_takens.size > 0
  %table.grid
    %thead
      %tr
        %th Test begonnen
        %th Test beeindigd
        %th Correct/Totaal
        %th Score
        %th
    %tbody
      -@survey.survey_takens.each do |tested|
        %tr
          %td= l tested.created_at
          %td= l tested.updated_at
          %td== #{tested.nr_correct} / #{tested.nr_questions}
          %td= show_score(tested.score)
          %td= link_to (tested.nr_correct.nil? ? "Vervolledig test" : "Toon test"), survey_taken_path(tested)
-else
  %p Nog niet getest.

= link_to t('common.edit'), edit_survey_path(@survey)
\|
= link_to t('common.back'), surveys_path
