!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title== Vocabularium -- #{@page_title}
    %meta{'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %link{ :href => "/favicon.ico", :rel => "shortcut icon" }

    = stylesheet_link_tag :all

    = javascript_include_tag :defaults
    = javascript_include_tag 'packets.js'
    = javascript_include_tag :on_the_spot

    = csrf_meta_tag

    = yield :local_javascript

    = yield :head
  %body
    #banner
      .the-title
        %h1
          %span.hideText Your application
      #user_nav
        = render 'devise/menu/registration_items'
        |
        = render 'devise/menu/login_items'
      #navigation
        .nav_link=link_to "Home", root_path
        .nav_link=link_to "Woordenlijsten", packets_path
        .nav_link=link_to "Overhoren", surveys_path
    #container
      #sidebar
      #contents
        - flash.each do |name, msg|
          %div{:class => [name," message"], :id => "flash_#{name}"}
            = msg
        =yield
    #footer
