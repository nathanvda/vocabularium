%h2= t('devise.form.sign_up')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password, t('devise.form.password')
    = f.password_field :password
  .field
    = f.label :password_confirmation, t('devise.form.password_confirmation')
    = f.password_field :password_confirmation
  .field
    = f.label :name, t('devise.form.nickname')
    = f.text_field :name
  .field
    = f.label :fullname, t('devise.form.fullname')
    = f.text_field :fullname
  .field
    = f.submit t('devise.form.sign_up')
= render :partial => "devise/shared/links"
