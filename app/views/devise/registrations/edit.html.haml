%h2
  Wijzig #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :password, 'Paswoord'
    %i (laat leeg als je je paswoord niet wil wijzigen)
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation, 'Paswoord bevestiging'
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label :current_password, "Huidig paswoord"
    %i (we hebben je huidige paswoord om je wijzigingen te bevestigen)
    %br/
    = f.password_field :current_password
  %p= f.submit "Aanpassen"
%h3 Verwijder mijn account
%p
  Ontevreden? #{link_to "Verwijder mijn account", registration_path(resource_name), :confirm => "Ben je zeker?", :method => :delete}.
= link_to t('common.back'), :back
