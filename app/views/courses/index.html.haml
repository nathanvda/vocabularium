%h1 Listing courses

%table
  %tr
    %th Name
    %th Description
    %th User
    %th
    %th
    %th

  - @courses.each do |course|
    %tr
      %td= course.name
      %td= course.description
      %td= course.user_id
      %td= link_to t('common.show'), course
      %td= link_to t('common.edit'), edit_course_path(course)
      %td= link_to t('common.destroy'), course, :confirm => t('common.you_sure'), :method => :delete

%br

= link_to 'New course', new_course_path
